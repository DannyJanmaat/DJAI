<Window
    x:Class="DJAI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DJAI"
    xmlns:views="using:DJAI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DJAI.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- App title bar -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Height="48">
            <TextBlock Text="DJAI Chat App" VerticalAlignment="Center" Margin="12,0" Foreground="White" FontWeight="SemiBold"/>
        </Grid>

        <!-- Sidebar met conversatielijst -->
        <Grid Grid.Row="1" Grid.Column="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- New conversation button -->
            <Button Grid.Row="0" Content="Nieuw gesprek" Command="{x:Bind ViewModel.NewConversationCommand}" Margin="12,12,12,6" HorizontalAlignment="Stretch"/>

            <!-- Conversation list -->
            <ListView Grid.Row="1" 
                    ItemsSource="{x:Bind ViewModel.Conversations, Mode=OneWay}" 
                    SelectedItem="{x:Bind ViewModel.SelectedConversation, Mode=TwoWay}"
                    Margin="0,6">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Conversation">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Title}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                            <FontIcon Grid.Column="1" 
                                      Glyph="&#xE74E;" 
                                      Visibility="{Binding ElementName=container, Path=IsPointerOver}"
                                      Margin="8,0,0,0"
                                      Tapped="DeleteConversation_Tapped"
                                      ToolTipService.ToolTip="Verwijder gesprek"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Action buttons -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="12">
                <Button Content="Instellingen" 
                        Command="{x:Bind ViewModel.OpenSettingsCommand}" 
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,8"/>
                <Button Content="Exporteer Gesprek" 
                        Command="{x:Bind ViewModel.ExportConversationCommand}"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <!-- Main chat area -->
        <Grid Grid.Row="1" Grid.Column="1">
            <ContentControl Content="{x:Bind ViewModel.ActivePage, Mode=OneWay}"/>
        </Grid>

        <!-- Export popup -->
        <Popup x:Name="ExportPopup" 
              Grid.Row="1" 
              Grid.Column="1"
              IsOpen="{x:Bind ViewModel.IsExportMenuOpen, Mode=OneWay}"
              HorizontalOffset="100"
              VerticalOffset="100">
            <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Width="280">
                    <TextBlock Text="Exporteren als:" FontWeight="SemiBold" Margin="0,0,0,16"/>

                    <StackPanel Spacing="12">
                        <Button Content="Tekstbestand (.txt)" 
                                Command="{x:Bind ViewModel.ExportAsCommand}" 
                                CommandParameter="Text"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Markdown (.md)" 
                                Command="{x:Bind ViewModel.ExportAsCommand}" 
                                CommandParameter="Markdown"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="HTML (.html)" 
                                Command="{x:Bind ViewModel.ExportAsCommand}" 
                                CommandParameter="Html"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="JSON (.json)" 
                                Command="{x:Bind ViewModel.ExportAsCommand}" 
                                CommandParameter="Json"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <Button Content="Annuleren" 
                            Command="{x:Bind ViewModel.CloseExportMenuCommand}"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>